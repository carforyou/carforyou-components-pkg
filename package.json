{
  "name": "@carforyou/components",
  "version": "0.0.0",
  "description": "CAR FOR YOU React components",
  "scripts": {
    "version": "npm run build",
    "dev": "npm run build:tailwind && npm run build:assets && start-storybook -s ./public -p 6006",
    "test": "jest",
    "lint": "eslint --ext ts,js,tsx,jsx,json .",
    "format": "npm run lint -- --fix",
    "build": "npm run build:tailwind && npm run build:assets && pika build",
    "build:tailwind": "tsc --project tsconfig.tailwind.json",
    "build:assets": "npx cfy-assets build",
    "build:storybook": "npm run build:tailwind && build-storybook",
    "bundlesize": "bundlesize",
    "deploy": "storybook-to-ghpages",
    "link": "./bin/link.sh",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carforyou/carforyou-components-pkg.git"
  },
  "author": "CAR FOR YOU",
  "license": "MIT",
  "homepage": "https://github.com/carforyou/carforyou-components-pkg#readme",
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0",
    "tailwindcss": "^2.2.4"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "deepmerge": "^4.2.2",
    "downshift": "^6.0.0",
    "glob": "^7.1.6",
    "lodash.debounce": "^4.0.8",
    "react-calendar": "^3.3.1",
    "react-paginate": "^7.0.0",
    "react-tooltip-lite": "npm:@carforyou/react-tooltip-lite@1.12.1",
    "tailwindcss-gradients": "^2.0.0",
    "use-deep-compare-effect": "^1.4.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@carforyou/assets": "2.0.0",
    "@carforyou/eslint-config": "3.1.10",
    "@carforyou/pika-plugin-build-components": "1.1.4",
    "@pika/pack": "0.5.0",
    "@pika/plugin-copy-assets": "0.9.2",
    "@pika/plugin-standard-pkg": "0.9.2",
    "@pika/plugin-ts-standard-pkg": "0.9.2",
    "@storybook/addon-actions": "6.3.8",
    "@storybook/addon-essentials": "6.3.8",
    "@storybook/addon-links": "6.3.8",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.3.8",
    "@storybook/storybook-deployer": "2.8.10",
    "@testing-library/react": "12.0.0",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.9",
    "@types/react": "16.14.13",
    "@types/react-paginate": "7.1.1",
    "autoprefixer": "10.3.1",
    "babel-loader": "8.2.2",
    "bundlesize": "0.18.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "27.0.6",
    "marked": "2.1.3",
    "marked-terminal": "4.1.1",
    "postcss": "8.3.6",
    "postcss-easy-import": "3.0.0",
    "postcss-loader": "4.3.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "semantic-release": "17.4.4",
    "tailwindcss": "2.2.7",
    "ts-jest": "27.0.4",
    "ts-loader": "8.3.0",
    "typescript": "4.3.5",
    "webpack": "4.46.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "./tsconfig.pika.json"
        }
      ],
      [
        "@carforyou/pika-plugin-build-components"
      ],
      [
        "@pika/plugin-copy-assets"
      ]
    ]
  },
  "storybook-deployer": {
    "commitMessage": "Deploy storybook [skip ci]"
  }
}
